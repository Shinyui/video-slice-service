# Application Configuration
PORT=3000
NODE_ENV=development

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your_access_key_here
MINIO_SECRET_KEY=your_secret_key_here
MINIO_BUCKET=test-bucket

# Processing Configuration
FFMPEG_CONCURRENCY_LIMIT=2
UPLOAD_CONCURRENCY_LIMIT=5
IMAGE_CONCURRENCY_LIMIT=5

# FFmpeg Settings
FFMPEG_CRF=23
FFMPEG_PRESET=fast
HLS_TIME=10

# Backend Integration
BACKEND_URL=http://localhost:4000
BACKEND_NOTIFY_TIMEOUT=5000

# File Upload Limits
MAX_FILE_SIZE=5368709120
UPLOAD_DIR=./uploads

# Recovery Service
STALE_THRESHOLD_MS=900000
CHECK_INTERVAL_MS=600000

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_KEYS=your_api_key_1,your_api_key_2

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Redis (Optional - for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
